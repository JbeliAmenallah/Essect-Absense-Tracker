<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD6DB"
    tools:context=".intro"
    tools:layout_editor_absoluteX="-22dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="578dp"
        android:layout_height="604dp"
        app:srcCompat="@drawable/girl"
        tools:layout_editor_absoluteX="-109dp"
        tools:layout_editor_absoluteY="48dp"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@drawable/girl" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_white"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@drawable/bottom_white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Application\n Essect University"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.86"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="260dp"
        android:layout_height="136dp"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="516dp"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@drawable/essect" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:text=" Download The ESSECT First \n Absence Tracker Application\n In Order To follow Your presence "
        android:textColor="#8b8b8b"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/button"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:background="@drawable/bgbtnintro"
        android:gravity="center"
        android:text="Get Started"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="233dp"
        tools:text="Get Started" />

    <Button
        android:id="@+id/button1"
        android:layout_width="182dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:text="Get Started"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="742dp" />


</androidx.constraintlayout.widget.ConstraintLayout>